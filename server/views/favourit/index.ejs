<% include ../partials/header.ejs %>


<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>
            
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr>
                    <th class="text-center">First Name</th>
                    <th class="text-center">Last Name</th>
                    <th class="text-center">Age</th>
                    <th class="text-center">Edit</th>
                    <th class="text-center">Delete</th>
                </tr>

                <!-- Repeatable Template Row -->
                <% for(let count = 0; count < favouriteList.length; count++) { %>
                    <tr>
                        <td class="text-center"><%= favouriteList[count].FirstName %></td>
                        <td class="text-center"><%= favouriteList[count].LastName %></td>
                        <td class="text-center"><%= favouriteList[count].Age %></td>



                        <td class="text-center">
                            <a href="/favourite-List/edit/<%= favouriteList[count]._id %>"
                                class="btn btn-primary"><i class="fa fa-pencil"></i> Edit</a>
                            </td>

                       <td class="text-center">
                       <a href="/favourite-List/delete/<%= favouriteList[count]._id %>" 
                       class="btn btn-danger"><i class="fa fa-trash"></i> Delete </a>
                       </td>
                    </tr>
                <% } %>
            </table>
                <a class="btn btn-primary" href="/favourite-List/add" role="button"><i class="fa fa-plus"></i> Add Favourites</a>
        </div>
    </div>
</div>
 <% include ../partials/footer.ejs %>